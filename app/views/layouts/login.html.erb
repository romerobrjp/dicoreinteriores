<!DOCTYPE html>
<!--[if IE 7]>
<html class="ie ie7" lang="en-US">
<![endif]-->
<!--[if IE 8]>
<html class="ie ie8" lang="en-US">
<![endif]-->
<!--[if !(IE 7) | !(IE 8)  ]><!-->
<html lang="en-US">
<!--<![endif]-->

  <%= render 'shared/head' %>

  <body class="hold-transition login-page themecolor4">    
    <%= content_for?(:header) ? yield(:header) : render('shared/header') %>

    <br /><br />

    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="login-box">
            <!-- <div class="login-logo text-center">
              <a href="../../index2.html"><b>Admin</b>LTE</a>
            </div> -->
            <!-- /.login-logo -->

            <div class="login-box-body">
              <p class="login-box-msg"><%= t('views.app.auth.sign_in_msg') %></p>
            
              <form action="../../index2.html" method="post">        
                <div class="form-group has-feedback">
                  <input type="email" class="form-control" placeholder="<%= t('models.user.email') %>">
                  <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
            
                <div class="form-group has-feedback">
                  <input type="password" class="form-control" placeholder="<%= t('models.user.password') %>">
                  <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
            
                <div class="row">
                  <div class="col-xs-8">
                    <div class="checkbox icheck">
                      <label>
                        <input type="checkbox"> <%= t('views.app.auth.remember_password') %>
                      </label>
                    </div>
                  </div><!-- /.col -->
                  <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat"><%= t('views.app.auth.sign_in') %></button>
                  </div><!-- /.col -->
                </div>
              </form>

              <div class="social-auth-links text-center">
                <p>- <%= t('generic.or') %> -</p>
                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                  <i class="fa fa-facebook"></i> <%= t('views.app.auth.sign_in_facebook') %>
                </a>
                
                <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                  <i class="fa fa-google-plus"></i> <%= t('views.app.auth.sign_in_google') %>
                </a>
              </div><!-- /.social-auth-links -->

              <br />

              <div class="row text-center">
                <div class="col-xs-6">
                  <a href="#"><%= t('views.app.auth.forgot_password') %></a><br>                  
                </div>

                <div class="col-xs-6">
                  <a href="register.html" class="text-center"><%= t('views.app.auth.sign_up') %></a>
                </div>
              </div>

              <br />
              <br />

            </div><!-- /.login-box-body -->
          </div><!-- /.login-box -->
        </div>
      </div>
    </div>

    <%= render 'shared/footer' %>

    <%= javascript_include_tag 'application' %>

    <!-- TODO: include iCheck plugin -->

    <script>
      $(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' // optional
        });
      });
    </script>
  </body>
</html>