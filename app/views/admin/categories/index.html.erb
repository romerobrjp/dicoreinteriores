<% content_for :page_header, 'Categorias' %>
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Todas as Categorias</h3>
    <div class="box-tools pull-right">
      <div class="btn-group btn-group-sm">
        <%= link_to t('views.admin.submenu.new_category'), new_admin_category_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>

  <div class="box-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>
            <div class="btn-group btn-group-xs" role="group">
              <%= link_to edit_admin_category_path(category), class: 'btn btn-warning' do %>
              <i class="fa fa-pencil"></i><% end %>
              <%= link_to admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
              <i class="fa fa-trash"></i><% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>
