<%= simple_form_for([:admin, @space_type]) do |f| %>
  <%= f.error_notification %>

  <div class="box-body">

    <div class="row">
      <div class="col-md-6">
        <%= f.input :name %>
      </div>
      <div class="col-md-6">
        <%= f.input :picture %>
      </div>
    </div>

    <% if @space_type.persisted? %>
    <div class="row">
      <div class="col-md-6">
        <%= image_tag @space_type.picture.url(:thumb) %>
      </div>
    </div>
    <% end %>

  <div class="box-footer">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to t('helpers.cancel'), admin_space_types_path, class: 'btn btn-danger' %>
  </div>
<% end %>
