  <!-- form start -->
<%= simple_form_for([:admin, @post]) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this admin_post from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="box-body">
    <%= f.input :title %>
    <%= f.input :introduction %>
    <%= f.input :draft %>
    <%= f.input :body, input_html: { 'data-provide': 'markdown' } %>
  </div>
  <div class="box-footer">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', admin_posts_path, class: 'btn btn-danger' %>
  </div>

<% end %>
