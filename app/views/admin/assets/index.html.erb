<% content_for :page_header, 'Arquivos' %>
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><%= t('views.admin.menu.assets') %></h3>
    <%= link_to t('views.admin.new_asset'), new_admin_asset_path, class: 'btn btn-primary pull-right' %>
  </div>

  <div class="box-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t('generic.description') %></th>
          <th><%= t('generic.file') %></th>
          <th><%= t('generic.created_at') %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @assets.each do |asset| %>
        <tr>
          <td><%= asset.description %></td>
          <td>
            <div class="input-group" style="max-width: 300px">
              <input class="form-control input-sm" id="asset_url<%= asset.id %>" value="<%= asset.file.url %>"/>
              <div class="input-group-btn">
                <button class="btn btn-default btn-sm clipboard-btn" data-clipboard-target="#asset_url<%= asset.id %>" type="button">
                  <i alt="Copy to clipboard" class="fa fa-clipboard"></i>
                </button>
                <%= link_to asset.file.url, class: 'btn btn-default btn-sm' do %>
                <i alt="Copy to clipboard" class="fa fa-download"></i>
                <% end %>
              </div>
            </div>
          </td>
          <td><%= asset.created_at %></td>
          <td>
            <div class="btn-group btn-group-xs" role="group">
              <%= link_to edit_admin_asset_path(asset), class: 'btn btn-warning' do %>
              <i class="fa fa-pencil"></i><% end %>
              <%= link_to admin_asset_path(asset), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
              <i class="fa fa-trash"></i><% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
