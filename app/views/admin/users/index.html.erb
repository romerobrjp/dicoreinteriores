<% content_for :page_header, 'UsuÃ¡rios do Sistema' %>
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"> <%= t('views.admin.users.all') %>  </h3>
    <div class="box-tools pull-right">
      <div class="btn-group btn-group-sm">
        <%= link_to t('views.admin.new_admin'), new_admin_admin_path, class: 'btn btn-primary' %>
        <%= link_to t('views.admin.new_customer'), new_admin_customer_path, class: 'btn btn-info' %>
      </div>
    </div>
  </div>

  <div class="box-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.user.name') %></th>
          <th class="hidden-sm hidden-xs"><%= t('activerecord.attributes.user.surname') %></th>
          <th><%= t('activerecord.attributes.user.email') %></th>
          <th><%= t('activerecord.attributes.user.type') %></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td class="hidden-sm hidden-xs"><%= user.surname %></td>
          <td><%= user.email %></td>
          <td><%= user.type %></td>
          <td>
            <div class="btn-group btn-group-xs" role="group">
              <%= link_to admin_user_path(user), class: 'btn btn-primary' do %>
              <i class="fa fa-eye"></i><% end %>
              <%= link_to edit_admin_user_path(user), class: 'btn btn-warning' do %>
              <i class="fa fa-pencil"></i><% end %>
              <%= link_to admin_user_path(user), method: :delete, data: { confirm: t('generic.are_you_sure') }, class: 'btn btn-danger' do %>
              <i class="fa fa-trash"></i><% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>