<p id="notice"><%= notice %></p>

<% content_for :page_header, t('views.admin.users.title') %>

<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"> <%= t('views.admin.users.show') %> </h3>
    <div class="box-tools pull-right">
      <div class="btn-group btn-group-sm" role="group">
        <%= link_to 'Edit User', edit_admin_user_path(@user), class: 'btn btn-primary' %>
        <%= link_to 'Delete User', admin_user_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>

  <div class="box-body">
    <div class="row">
    </div>

    <div class="row">
      <div class="col-md-2">
        <%= image_tag @user.avatar.url(:thumb), class: 'img-responsive img-circle' %>
      </div>
      <div class="col-md-10">
        <div class="row">
          <div class="col-md-2">
            <b>Nome</b>
          </div>
          <div class="col-md-3">
            <p><%= @user.name %></p>
          </div>
          <div class="col-md-2">
            <b>Sobrenome</b>
          </div>
          <div class="col-md-3">
            <p><%= @user.surname %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <b>Email</b>
          </div>
          <div class="col-md-3">
            <p><%= @user.email %></p>
          </div>
          <div class="col-md-2">
            <b>CPF</b>
          </div>
          <div class="col-md-3">
            <p><%= @user.cpf %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <b>Telefone 1</b>
          </div>
          <div class="col-md-3">
            <p><%= @user.phone1 %></p>
          </div>
          <div class="col-md-2">
            <b>Telefone 2</b>
          </div>
          <div class="col-md-3">
            <p><%= @user.phone2 %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <b>Rua</b>
          </div>
          <div class="col-md-3">
            <p><%= @user.street %></p>
          </div>
          <div class="col-md-2">
            <b>NÃºmero</b>
          </div>
          <div class="col-md-3">
            <p><%= @user.street_number %></p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-1">
            <b>CEP</b>
          </div>
          <div class="col-md-2">
            <p><%= @user.zip_code %></p>
          </div>
          <div class="col-md-1">
            <b>Cidade</b>
          </div>
          <div class="col-md-2">
            <p><%= @user.city %></p>
          </div>
          <div class="col-md-1">
            <b>Estado</b>
          </div>
          <div class="col-md-2">
            <p><%= @user.state %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
