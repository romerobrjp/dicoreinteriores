<aside id="recent-posts-2" class="widget_recent_entries widget">
    <h3 class="module-title title-widget"> <%= t("views.blog.populars") %> </h3>

    <ul>
        <% @populars.each do |post| %>
            <li class="cat-item cat-item-14">
                <%= link_to post.title, post %>
            </li>
        <% end %>
    </ul>
</aside>

