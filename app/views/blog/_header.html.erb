<header class="tz-header tz-header-page blog-header">
    <div class="container">
        <button data-target=".nav-collapse" class="btn-navbar tz_icon_menu" type="button">
            <i class="fa fa-bars"></i>
        </button>
        <h3 class="tzlogo pull-left">
            <%= link_to root_path, title: t('generic.app_name') do %>
                <%= image_tag 'logo-draw.svg', id: 'logo-img' %>
                <%= image_tag 'logo-text.svg', id: 'logo-text' %>
            <% end %>
        </h3>

        <%= render 'blog/header_menu' %>
    </div>
</header>
