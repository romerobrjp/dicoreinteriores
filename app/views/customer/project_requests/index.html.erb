<% content_for :page_header, ProjectRequest.model_name.human(count: 2) %>
<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><%= t('views.customer.menu.project_requests') %></h3>
    <div class="box-tools pull-right">
      <%= link_to t('helpers.submit.create', model: ProjectRequest.model_name.human), new_customer_project_request_path, class: 'btn btn-sm btn-primary' %>
    </div>
  </div>

  <div class="box-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= ProjectRequest.human_attribute_name(:space_type) %></th>
          <th><%= ProjectRequest.human_attribute_name(:status) %></th>
          <th><%= ProjectRequest.human_attribute_name(:created_at) %></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @project_requests.each do |project_request| %>
        <tr>
          <td><%= project_request.space_type.name %></td>
          <td>
            <td><%= project_request.status %></td>
          </td>
          <td><%= project_request.created_at %></td>
          <td>
            <div class="btn-group btn-group-xs" role="group">
              <%= link_to edit_customer_project_request_path(project_request), class: 'btn btn-warning' do %>
              <i class="fa fa-pencil"></i><% end %>
              <%= link_to customer_project_request_path(project_request), method: :delete, data: { confirm: t('generic.are_you_sure') }, class: 'btn btn-danger' do %>
              <i class="fa fa-trash"></i><% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
