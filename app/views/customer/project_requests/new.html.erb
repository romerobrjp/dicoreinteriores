<% content_for :page_header, ProjectRequest.model_name.human(count: 2) %>
<div class="box box-primary" ng-controller='NewProjectRequestCtrl as nprCtrl'>
  <div class="box-header with-border">
    <h3 ng-show="nprCtrl.step == 1">
      Step 01 - Choose the type fo the space
    </h3>
    <h3 ng-show="nprCtrl.step == 2">
      Step 02 - Describe your project
    </h3>
    <h3 ng-show="nprCtrl.step == 3">
      Step 03 - Confirm your project request
    </h3>
  </div>
  <div class="box-body">
    <div ng-show="nprCtrl.step == 1">
      <%= render 'step01' %>
    </div>
    <div ng-show="nprCtrl.step == 2">
      <%= render 'step02' %>
    </div>
    <div ng-show="nprCtrl.step == 3">
      <%= render 'step03' %>
    </div>
  </div>
</div>
