<div class="panel panel-default">
  <div class="panel-heading">Describe your project</div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-12">
        <h3>Description of your project</h3>
        <textarea ng-model='nprCtrl.project_request.description' data-provide="markdown"></textarea>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12" style="margin-bottom: 40px">

        <h3>Attachments</h3>
        <input type="file" nv-file-select="" uploader="nprCtrl.uploader" multiple  /><br/>
        <table class="table">
          <thead>
            <tr>
              <th width="50%">Name</th>
              <th ng-show="nprCtrl.uploader.isHTML5">Size</th>
              <th ng-show="nprCtrl.uploader.isHTML5">Progress</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
            <tbody>
              <tr ng-repeat="item in nprCtrl.uploader.queue">
                <td><strong>{{ item.file.name }}</strong></td>
                <td ng-show="nprCtrl.uploader.isHTML5" nowrap>{{ item.file.size/1024/1024|number:2 }} MB</td>
                <td ng-show="nprCtrl.uploader.isHTML5">
                  <div class="progress" style="margin-bottom: 0;">
                    <div class="progress-bar" role="progressbar" ng-style="{ 'width': item.progress + '%' }"></div>
                  </div>
                </td>
                <td class="text-center">
                  <span ng-show="item.isSuccess"><i class="glyphicon glyphicon-ok"></i></span>
                  <span ng-show="item.isCancel"><i class="glyphicon glyphicon-ban-circle"></i></span>
                  <span ng-show="item.isError"><i class="glyphicon glyphicon-remove"></i></span>
                </td>
                <td nowrap>
                  <button type="button" class="btn btn-success btn-xs" ng-click="item.upload()" ng-disabled="item.isReady || item.isUploading || item.isSuccess">
                    <span class="glyphicon glyphicon-upload"></span> Upload
                  </button>
                  <button type="button" class="btn btn-warning btn-xs" ng-click="item.cancel()" ng-disabled="!item.isUploading">
                    <span class="glyphicon glyphicon-ban-circle"></span> Cancel
                  </button>
                  <button type="button" class="btn btn-danger btn-xs" ng-click="item.remove()" ng-disabled="item.isUploading || item.isSuccess">
                    <span class="glyphicon glyphicon-trash"></span> Remove
                  </button>
                </td>
              </tr>
            </tbody>
        </table>

        <div>
          <div>
            Attachments upload progress:
            <div class="progress" style="">
              <div class="progress-bar" role="progressbar" ng-style="{ 'width': nprCtrl.uploader.progress + '%' }"></div>
            </div>
          </div>
          <button type="button" class="btn btn-success btn-s" ng-click="nprCtrl.uploader.uploadAll()" ng-disabled="!nprCtrl.uploader.getNotUploadedItems().length">
            <span class="glyphicon glyphicon-upload"></span> Upload all
          </button>
          <button type="button" class="btn btn-warning btn-s" ng-click="nprCtrl.uploader.cancelAll()" ng-disabled="!nprCtrl.uploader.isUploading">
            <span class="glyphicon glyphicon-ban-circle"></span> Cancel all
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="panel-footer">
    <button class="btn btn-primary pull-right" ng-click="nprCtrl.next()" ng-disabled="nprCtrl.uploader.getNotUploadedItems().length">Next</button>
    <div class="clearfix"></div>
  </div>
</div>
