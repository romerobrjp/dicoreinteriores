<div class="panel panel-default">
  <div class="panel-heading">Choose the type of space</div>
  <div class="panel-body">
    <%= form_for [:customer, @project_request] do |f| %>
      <% SpaceType.all.each do |space_type| %>
      <label>
        <input type="radio" name="space_type" ng-model="nprCtrl.project_request.space_type_id" value="<%= space_type.id %>" />
        <%= image_tag space_type.picture.url(:thumb), class: 'img-thumbnail' %>
      </label>
      <% end %>
    <% end %>
  </div>
  <div class="panel-footer">
    <button class="btn btn-primary pull-right" ng-click="nprCtrl.next()">Next</button>
    <div class="clearfix"></div>
  </div>
</div>

<% content_for :styles do %>
label > input{
  visibility: hidden;
  position: absolute;
}
label > input + img{
  cursor:pointer;
  border:2px solid transparent;
}
label > input:checked + img{
  border:2px solid #f00;
}
<% end %>
