<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-box">

      <div class="login-box-body">
        <p class="login-box-msg"><%= t('views.app.auth.recover_password_msg') %></p>

        <%= simple_form_for(:user, url: password_path(:user), method: :post) do |f| %>
          <%= f.error_notification %>
          <div class="form-group has-feedback">
            <%= f.text_field :email, class: 'form-control', placeholder: t('models.user.email'), required: true, autofocus: true %>
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
          </div>

          <div class="form-group row">
            <div class="col-xs-6 pull-right">
              <%= f.submit t('views.app.auth.recover_password'), class: 'btn btn-primary btn-block btn-flat' %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
